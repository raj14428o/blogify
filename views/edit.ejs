<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <title>Edit Blog</title>
</head>
<body>
  <div class="container mt-4">
    <h1>Edit Blog</h1>

    <!-- ✅ Show current cover image -->
    <div class="mb-3">
      <label>Current Cover Image:</label><br>
      <img src="<%= blog.coverImageURL %>" width="400px" class="img-fluid rounded" alt="Current Cover Image">
    </div>

    <!-- ✅ Edit form with file upload -->
    <form action="/blog/<%= blog._id %>/edit" method="POST" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title">Title</label>
        <input type="text" name="title" class="form-control" value="<%= blog.title %>" required />
      </div>

      <div class="mb-3">
        <label for="body">Body (Markdown)</label>
        <textarea name="body" class="form-control" rows="10" required><%= blog.body %></textarea>
      </div>

      <div class="mb-3">
        <label for="coverImage">Upload New Cover Image</label>
        <input type="file" name="coverImage" class="form-control" accept="image/*" />
        <small class="text-muted">Leave blank to keep current image.</small>
      </div>

      <button class="btn btn-primary">Update Blog</button>
    </form>
  </div>

  <%- include('./partials/scripts') %>
</body>
</html>