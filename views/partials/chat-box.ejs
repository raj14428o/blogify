<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat-box</title>
</head>

<style>
/* ===== CHAT HEADER FIX ===== */
.chat-header {
  padding: 12px 16px;
  border-bottom: 1px solid #e5e7eb;
  background: #fff;
}

.chat-user {
  display: flex;
  align-items: center;
  gap: 12px;
}

.chat-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  object-fit: cover;
  flex-shrink: 0;
}

.chat-user-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.chat-name {
  font-size: 15px;
  font-weight: 600;
  color: #111827;
  line-height: 1.2;
}

.chat-status {
  font-size: 12px;
  color: #6b7280;
}

.chat-status.online {
  color: #16a34a;
  font-weight: 500;
}

.empty-title {
  font-size: 16px;
  font-weight: 600;
  color: #111827;
}

.empty-subtitle {
  font-size: 13px;
  opacity: 0.8;
}

/* input bar */
.chat-input {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 12px;
  border-top: 1px solid #e5e7eb;
  background: #fff;
  margin-top: auto;
}

.chat-input input {
  flex: 1;
  padding: 10px 14px;
  border-radius: 999px;
  border: 1px solid #d1d5db;
  font-size: 14px;
}

.chat-input button {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  border: none;
  background: #000;
  color: #fff;
  font-size: 16px;
}

.chat-box {
  display: flex;
  flex-direction: column;
  height: 100%;
  min-height: 0;
}

.chat-empty {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.chat-messages {
  flex: 1;
  min-height: 0;
  overflow-y: auto;

  display: flex;
  flex-direction: column;   
}

</style>

<body>

<div class="chat-box">

  <!-- CHAT HEADER -->
  <div class="chat-header">
    <div class="chat-user">

      <!-- BACK BUTTON -->
      <a href="/messages" class="chat-back" aria-label="Back to messages">
        <svg viewBox="0 0 24 24" width="20" height="20">
          <path d="M15 18l-6-6 6-6"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"/>
        </svg>
      </a>

      <img src="<%= chatUser.profileImageUrl %>" class="chat-avatar" />

      <div class="chat-user-info">
        <div class="chat-name"><%= chatUser.fullName %></div>

        <div class="chat-status <%= chatUser.isOnline ? 'online' : '' %>">
          <% if (chatUser.isOnline) { %>
            Online
          <% } else if (chatUser.lastSeen) { %>

            <%
  const lastSeen = new Date(chatUser.lastSeen);
  const now = new Date();

  const isToday =
    lastSeen.toDateString() === now.toDateString();

  const yesterday = new Date();
  yesterday.setDate(now.getDate() - 1);

  const isYesterday =
    lastSeen.toDateString() === yesterday.toDateString();

  const sameYear =
    lastSeen.getFullYear() === now.getFullYear();

  const timeOptions = {
    hour: 'numeric',
    minute: '2-digit',
    hour12: true
  };

  const dateOptionsSameYear = {
    day: '2-digit',
    month: 'short'
  };

  const dateOptionsWithYear = {
    day: '2-digit',
    month: 'short',
    year: 'numeric'
  };
%>

<% if (isToday) { %>
  Last seen <%= lastSeen.toLocaleTimeString([], timeOptions) %>
<% } else if (isYesterday) { %>
  Yesterday, <%= lastSeen.toLocaleTimeString([], timeOptions) %>
<% } else if (sameYear) { %>
  <%= lastSeen.toLocaleDateString([], dateOptionsSameYear) %>,
  <%= lastSeen.toLocaleTimeString([], timeOptions) %>
<% } else { %>
  <%= lastSeen.toLocaleDateString([], dateOptionsWithYear) %>,
  <%= lastSeen.toLocaleTimeString([], timeOptions) %>
<% } %>
          <% } else { %>
            Offline
          <% } %>
        </div>

      </div>
    </div>
  </div>

  <!-- CHAT BODY -->
  <div class="chat-messages" id="chatMessages">
    <div class="chat-empty">
      <p class="empty-title">Start a conversation ðŸ‘‹</p>
      <p class="empty-subtitle">Say hi to <%= chatUser.fullName %></p>
    </div>
  </div>

  <!-- CHAT INPUT -->
 <div class="chat-input">
  <input
    id="messageInput"
    type="text"
    placeholder="Type a messageâ€¦"
  />
  <button id="sendBtn">âž¤</button>
</div>


</div>

</body>
</html>
