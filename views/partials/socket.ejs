<% if (user) { %>
  <script src="/socket.io/socket.io.js"></script>
  <script>
    // Global presence socket (ONE per user)
    if (!window.appSocket) {
      window.appSocket = io({
        auth: {
          userId: "<%= user._id %>"
        }
      });

      window.appSocket.on("connect", () => {
        
      });

      window.appSocket.on("disconnect", () => {
        
      });
    }
  </script>
<% } %>
