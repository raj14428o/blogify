<style>
html, body {
  overflow-x: hidden;
}

/* ===== NAVBAR BASE ===== */
.app-navbar-wrap {
  position: sticky;
  top: 0;
  z-index: 1000;
  background: rgba(255,255,255,0.92);
  backdrop-filter: blur(6px);
  border-bottom: 1px solid #e5e7eb;
}

@media (max-width: 768px) {
  .app-navbar-wrap {
    position: static;
  }
}

.app-navbar {
  width: 100%;
  padding: 12px 24px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* ===== LEFT ===== */
.nav-left {
  display: flex;
  align-items: center;
  gap: 14px;
}

.nav-logo {
  width: 36px;
  height: 36px;
  border-radius: 10px;
  background: #000;
  color: #fff;
  font-weight: 800;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-brand {
  font-size: 1.15rem;
  font-weight: 800;
  color: #000;
}

.nav-link {
  font-weight: 600;
  color: #374151;
  text-decoration: none;
}

/* ===== DESKTOP SEARCH ===== */
.nav-search {
  position: relative;
}

.nav-search input {
  width: 280px;
  padding: 8px 14px 8px 40px;
  border-radius: 999px;
  border: 1px solid #e5e7eb;
  background: #f9fafb;
}

.nav-search svg {
  position: absolute;
  left: 14px;
  top: 50%;
  transform: translateY(-50%);
  width: 18px;
  height: 18px;
  stroke: #6b7280;
}

/* ===== RIGHT ===== */
.nav-right {
  display: flex;
  align-items: center;
  gap: 16px;
}

.icon-btn {
  cursor: pointer;
}

.icon-btn svg {
  width: 22px;
  height: 22px;
  stroke: #374151;
}

.write-btn {
  background: #000;
  color: #fff;
  padding: 8px 16px;
  border-radius: 999px;
  font-weight: 700;
  text-decoration: none;
}

.profile-btn {
  display: flex;
  align-items: center;
  gap: 8px;
  cursor: pointer;
}

.profile-avatar {
  width: 34px;
  height: 34px;
  border-radius: 50%;
  object-fit: cover;
}

/* ===== DROPDOWN ===== */
.dropdown-menu {
  border-radius: 12px;
  border: 1px solid #e5e7eb;
  box-shadow: 0 15px 40px rgba(0,0,0,.12);
}

/* ===== BREAKPOINTS ===== */

/* Hide desktop search below laptop */
@media (max-width: 1023px) {
  .nav-search {
    display: none;
  }
}

/* VERY SMALL PHONES ONLY */
@media (max-width: 420px) {
  .nav-link,
  .write-btn,
  .profile-btn,
  .icon-btn.messages {
    display: none !important;
  }

  .app-navbar {
    padding: 10px 14px;
  }
}

/* ===== EXPANDED SEARCH ===== */
.search-expanded {
  display: none;
  background: #fff;
  border-bottom: 1px solid #e5e7eb;
  padding: 10px 16px;
}

.search-expanded.active {
  display: block;
}

.search-expanded-inner {
  max-width: 700px;
  margin: 0 auto;
  display: flex;
  gap: 10px;
}

.search-expanded-inner input {
  width: 100%;
  padding: 10px 14px;
  border-radius: 999px;
  border: 1px solid #e5e7eb;
}

.close-search {
  font-size: 20px;
  cursor: pointer;
}

/* ===== MOBILE MENU ===== */
.mobile-menu {
  position: fixed;
  top: 0;
  right: -100%;
  width: 260px;
  height: 100vh;
  background: #fff;
  box-shadow: -10px 0 30px rgba(0,0,0,.15);
  padding: 20px;
  display: flex;
  flex-direction: column;
  gap: 16px;
  transition: right 0.3s ease;
  z-index: 2000;
}

.mobile-menu.open {
  right: 0;
}

.mobile-menu a {
  font-weight: 600;
  color: #111;
  text-decoration: none;
}
/* ===== CLEAN NAV WHEN HAMBURGER APPEARS ===== */
@media (max-width: 767px) {

  /* Hide text links */
  .nav-link {
    display: none !important;
  }

  /* Hide message icon */
  .icon-btn.messages {
    display: none !important;
  }

  /* Hide write button */
  .write-btn {
    display: none !important;
  }

  /* Hide desktop profile (dropdown) */
  .profile-btn {
    display: none !important;
  }
}

.menu-backdrop {
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,0.25);
  z-index: 1500;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.25s ease;
}

.menu-backdrop.active {
  opacity: 1;
  pointer-events: all;
}

</style>

<div class="app-navbar-wrap">
  <nav class="app-navbar">

    <!-- LEFT -->
    <div class="nav-left">
      <div class="nav-logo">B</div>
      <div class="nav-brand">BlogSphere</div>
      <a href="/" class="nav-link">Home</a>

      <div class="nav-search d-none d-lg-block">
        <svg viewBox="0 0 24 24" fill="none" stroke-width="2">
          <circle cx="11" cy="11" r="8"></circle>
          <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
        </svg>
        <input type="text" placeholder="Search blogs, tags, people">
      </div>
    </div>

    <!-- RIGHT -->
    <div class="nav-right">

      <!-- Search toggle -->
      <div class="icon-btn d-lg-none" id="searchToggle">
        <svg viewBox="0 0 24 24" fill="none" stroke-width="2">
          <circle cx="11" cy="11" r="8"></circle>
          <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
        </svg>
      </div>

      <!-- Hamburger -->
      <div class="icon-btn d-sm-flex d-md-none" id="menuToggle">
        <svg viewBox="0 0 24 24" fill="none" stroke-width="2">
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <line x1="3" y1="12" x2="21" y2="12"></line>
          <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
      </div>

      <% if (navUser) { %>

        <a href="/messages" class="icon-btn messages">
          <svg viewBox="0 0 24 24" fill="none" stroke-width="2">
            <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
          </svg>
        </a>

        <a href="/blog/add-new" class="write-btn">Write</a>

        <div class="dropdown">
          <div class="profile-btn dropdown-toggle" data-bs-toggle="dropdown">
            <img src="<%= navUser.avatar || '/images/default-avatar.png' %>" class="profile-avatar">
            <span><%= navUser.name %></span>
          </div>
          <ul class="dropdown-menu dropdown-menu-end">
            <li><a class="dropdown-item" href="/user/profile/<%= user._id %>">Profile</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="/user/logout">Logout</a></li>
          </ul>
        </div>

      <% } else { %>
        <a href="/user/signin" class="nav-link">Sign in</a>
        <a href="/user/signup" class="write-btn">Get Started</a>
      <% } %>

    </div>
  </nav>
</div>

<!-- SEARCH BAR -->
<div class="search-expanded" id="searchExpanded">
  <div class="search-expanded-inner">
    <input type="text" placeholder="Search blogs, tags, people">
    <span class="close-search" id="closeSearch">âœ•</span>
  </div>
</div>

<!-- MOBILE MENU -->
 <div class="menu-backdrop" id="menuBackdrop"></div>
<div class="mobile-menu" id="mobileMenu">
  <a href="/">Home</a>
  <% if (navUser) { %>
  <a href="/messages">Messages</a>
  <a href="/blog/add-new">Write</a>
  <a href="/user/profile/<%= navUser.id %>">Profile</a>
  <a href="/user/logout">Logout</a>
<% } else { %>
  <a href="/user/signin">Sign in</a>
  <a href="/user/signup">Get Started</a>
<% } %>
</div>

<script>
const searchToggle = document.getElementById("searchToggle");
const searchExpanded = document.getElementById("searchExpanded");
const closeSearch = document.getElementById("closeSearch");

const menuToggle = document.getElementById("menuToggle");
const mobileMenu = document.getElementById("mobileMenu");
const menuBackdrop = document.getElementById("menuBackdrop");

/* ===== SEARCH ===== */
searchToggle?.addEventListener("click", () => {
  searchExpanded.classList.toggle("active");
});

closeSearch?.addEventListener("click", () => {
  searchExpanded.classList.remove("active");
});

/* ===== MOBILE MENU OPEN ===== */
menuToggle?.addEventListener("click", () => {
  mobileMenu.classList.add("open");
  menuBackdrop.classList.add("active");
});

/* ===== CLOSE ON BACKDROP ===== */
menuBackdrop?.addEventListener("click", () => {
  mobileMenu.classList.remove("open");
  menuBackdrop.classList.remove("active");
});

/* ===== CLOSE ON ESC ===== */
document.addEventListener("keydown", (e) => {
  if (e.key === "Escape") {
    mobileMenu.classList.remove("open");
    menuBackdrop.classList.remove("active");
  }
  
});
</script>





