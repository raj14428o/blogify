<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <title>Verify OTP</title>

  <style>
    /* ===== Auth Wrapper ===== */
    .auth-wrapper {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      background: #f8fafc;
      padding: 1rem;
    }

    /* ===== Auth Card ===== */
    .auth-card {
      width: 100%;
      max-width: 420px;
      background: #ffffff;
      padding: 2rem;
      border-radius: 12px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    }

    .auth-title {
      font-size: 1.4rem;
      font-weight: 700;
      text-align: center;
      margin-bottom: 0.5rem;
    }

    .auth-subtitle {
      font-size: 0.9rem;
      color: #6b7280;
      text-align: center;
      margin-bottom: 1.5rem;
    }

    /* ===== Inputs ===== */
    .auth-card input {
      border: 1.8px solid #d1d5db;
      border-radius: 8px;
      padding: 12px 14px;
      font-size: 0.95rem;
    }

    .auth-card input:focus {
      border-color: #2563eb;
      box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.15);
    }

    /* ===== Button ===== */
    .auth-card button[type="submit"] {
      width: 100%;
      padding: 12px;
      font-weight: 600;
      border-radius: 8px;
    }

    /* ===== Resend OTP ===== */
    .resend-btn {
      background: none;
      border: none;
      color: #2563eb;
      font-size: 0.9rem;
      cursor: pointer;
      font-weight: 500;
    }

    .resend-btn:hover {
      text-decoration: underline;
    }
  </style>
</head>

<body>

  <div class="auth-wrapper">
    <div class="auth-card">

      <!-- Title -->
      <div class="auth-title">Verify your email</div>
      <div class="auth-subtitle">
        Enter the OTP sent to your email address
      </div>

      <!-- Verify OTP Form -->
      <form action="/user/verify" method="post">

        <!-- Email -->
        <div class="mb-3">
          <label class="form-label">Email address</label>
          <input
            type="email"
            name="email"
            class="form-control"
            value="<%= email %>"
            readonly
          >
        </div>

        <!-- OTP -->
        <div class="mb-4">
          <label class="form-label">OTP</label>
          <input
            type="password"
            name="otp"
            class="form-control"
            placeholder="Enter OTP"
            required
          >
        </div>

        <!-- Submit -->
        <button type="submit" class="btn btn-primary">
          Verify OTP
        </button>
      </form>

      <!-- Resend OTP -->
      <form action="/user/resend-otp" method="post" class="text-center mt-3">
        <input type="hidden" name="email" value="<%= email %>">
        <button type="submit" class="resend-btn">
          Didnâ€™t receive OTP? Resend
        </button>
      </form>

    </div>
  </div>

  <%- include('./partials/scripts') %>
</body>
</html>

