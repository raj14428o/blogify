const activeChatUserId = <%- JSON.stringify(chatUser ? chatUser._id : null) %>;

function updateChatHeaderStatus(text, isOnline = false) {
  const chatBox = document.querySelector(".chat-box");
  const statusEl = chatBox?.querySelector(".chat-status");

  if (!statusEl) return;

  statusEl.innerText = text;

  if (isOnline) {
    statusEl.classList.add("online");     
  } else {
    statusEl.classList.remove("online");  
  }
}

socket.on("user-online", (userId) => {
  if (!activeChatUserId) return;
  if (userId === activeChatUserId) {
    updateChatHeaderStatus("Online",true);
  }
});
socket.on("user-last-seen", ({ userId, lastSeen }) => {
  if (!activeChatUserId) return;
  if (userId === activeChatUserId) {
    const time = new Date(lastSeen).toLocaleTimeString([], {
      hour: "2-digit",
      minute: "2-digit"
    });
    updateChatHeaderStatus(`Last seen at ${time}`);
  }
});
let sharedSecret = null;

(async () => {
  if (!activeChatUserId) return;

  try {
    sharedSecret = await deriveSharedSecret(activeChatUserId);
    console.log("ðŸ” Shared secret derived", sharedSecret);
  } catch (err) {
    console.error("Shared secret error:", err);
  }
})();

//encryption and decryption functions

async function deriveAESKey(sharedSecret) {
  return crypto.subtle.importKey(
    "raw",
    sharedSecret,               // ArrayBuffer from ECDH
    { name: "AES-GCM" },
    false,
    ["encrypt", "decrypt"]
  );
}

async function encryptMessage(plainText, sharedSecret) {
  const iv = crypto.getRandomValues(new Uint8Array(12)); // nonce
  const key = await deriveAESKey(sharedSecret);

  const encoded = new TextEncoder().encode(plainText);

  const encryptedBuffer = await crypto.subtle.encrypt(
    { name: "AES-GCM", iv },
    key,
    encoded
  );

  return {
    ciphertext: btoa(
      String.fromCharCode(...new Uint8Array(encryptedBuffer))
    ),
    nonce: btoa(
      String.fromCharCode(...iv)
    ),
  };
}

async function decryptMessage(ciphertextB64, nonceB64, sharedSecret) {
  const key = await deriveAESKey(sharedSecret);

  const ciphertext = Uint8Array.from(
    atob(ciphertextB64),
    c => c.charCodeAt(0)
  );

  const iv = Uint8Array.from(
    atob(nonceB64),
    c => c.charCodeAt(0)
  );

  const decryptedBuffer = await crypto.subtle.decrypt(
    { name: "AES-GCM", iv },
    key,
    ciphertext
  );

  return new TextDecoder().decode(decryptedBuffer);
}

window.encryptMessage = encryptMessage;
window.decryptMessage = decryptMessage;


