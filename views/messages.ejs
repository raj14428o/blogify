async function importPrivateKey(jwk) {
  return crypto.subtle.importKey(
    "jwk",
    jwk,
    { name: "ECDH", namedCurve: "P-256" },
    false,
    ["deriveBits"]
  );
}

async function importPublicKey(jwk) {
  return crypto.subtle.importKey(
    "jwk",
    jwk,
    { name: "ECDH", namedCurve: "P-256" },
    false,
    []
  );
}

async function deriveSharedSecret(otherUserId) {
  // 1. fetch other user's public key
  const res = await fetch(`/api/devices/public/${otherUserId}`);
  const data = await res.json();

  if (!data.publicKey) {
    throw new Error("Public key not found");
  }

  // 2. import keys
  const myPrivateKey = await importPrivateKey(
    window.deviceKeys.privateKey
  );

  const otherPublicKey = await importPublicKey(
    data.publicKey
  );

  // 3. derive shared secret bits
  const sharedSecret = await crypto.subtle.deriveBits(
    {
      name: "ECDH",
      public: otherPublicKey,
    },
    myPrivateKey,
    256
  );

  return sharedSecret; // ArrayBuffer
}


