// Open IndexedDB
function openKeyDB() {
  return new Promise((resolve, reject) => {
    const request = indexedDB.open("secure-chat-db", 1);

    request.onupgradeneeded = () => {
      request.result.createObjectStore("keys");
    };

    request.onsuccess = () => resolve(request.result);
    request.onerror = () => reject(request.error);
  });
}

async function getStoredKey(key) {
  const db = await openKeyDB();
  return new Promise((resolve) => {
    const tx = db.transaction("keys", "readonly");
    const store = tx.objectStore("keys");
    const req = store.get(key);
    req.onsuccess = () => resolve(req.result || null);
    req.onerror = () => resolve(null);
  });
}

async function saveStoredKey(key, value) {
  const db = await openKeyDB();
  return new Promise((resolve) => {
    const tx = db.transaction("keys", "readwrite");
    const store = tx.objectStore("keys");
    store.put(value, key);
    tx.oncomplete = resolve;
  });
}


async function generateKeyPair() {
  const keyPair = await crypto.subtle.generateKey(
    {
      name: "ECDH",
      namedCurve: "P-256",   //  browser-supported
    },
    true,
    ["deriveKey", "deriveBits"]
  );

  return {
    publicKey: await crypto.subtle.exportKey("jwk", keyPair.publicKey),
    privateKey: await crypto.subtle.exportKey("jwk", keyPair.privateKey),
  };
}

// ------------------------------------
// DEVICE KEY PROMISE MAP (per user)
// ------------------------------------
const deviceKeyPromiseMap = {};

async function initDeviceKeys(userId) {
  if (deviceKeyPromiseMap[userId]) {
    return deviceKeyPromiseMap[userId];
  }

  deviceKeyPromiseMap[userId] = (async () => {

    //  Get or create DEVICE ID (browser-wide)
    let deviceId = await getStoredKey("device_id");
    if (!deviceId) {
      deviceId = crypto.randomUUID();
      await saveStoredKey("device_id", deviceId);
    }

    // Get USER-SCOPED keys
    let keys = await getStoredKey(`keys:${userId}`);

    if (!keys) {
      const { publicKey, privateKey } = await generateKeyPair();

      keys = { deviceId, publicKey, privateKey };
      await saveStoredKey(`keys:${userId}`, keys);

      await fetch("/api/devices/register", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ userId, deviceId, publicKey }),
      });

      console.log(" New keypair generated for user:", userId);
    } else {
      console.log("Existing keypair loaded for user:", userId);
    }

    window.deviceKeys = keys;
    return keys;
  })();

  return deviceKeyPromiseMap[userId];
}


