<script>
/* ===============================
   DEVICE KEY INITIALIZATION
================================ */

// Open IndexedDB
function openKeyDB() {
  return new Promise((resolve, reject) => {
    const request = indexedDB.open("secure-chat-db", 1);

    request.onupgradeneeded = () => {
      request.result.createObjectStore("keys");
    };

    request.onsuccess = () => resolve(request.result);
    request.onerror = () => reject(request.error);
  });
}

// Get keys
async function getStoredKeys() {
  const db = await openKeyDB();
  return new Promise((resolve) => {
    const tx = db.transaction("keys", "readonly");
    const store = tx.objectStore("keys");
    const req = store.get("device");
    req.onsuccess = () => resolve(req.result || null);
  });
}

// Save keys
async function saveKeys(keys) {
  const db = await openKeyDB();
  return new Promise((resolve) => {
    const tx = db.transaction("keys", "readwrite");
    const store = tx.objectStore("keys");
    store.put(keys, "device");
    tx.oncomplete = resolve;
  });
}

async function generateKeyPair() {
  const keyPair = await crypto.subtle.generateKey(
    {
      name: "ECDH",
      namedCurve: "P-256",   // âœ… browser-supported
    },
    true,
    ["deriveKey", "deriveBits"]
  );

  return {
    publicKey: await crypto.subtle.exportKey("jwk", keyPair.publicKey),
    privateKey: await crypto.subtle.exportKey("jwk", keyPair.privateKey),
  };
}


// MAIN initializer
async function initDeviceKeys() {
  let keys = await getStoredKeys();

  if (!keys) {
    const deviceId = crypto.randomUUID();
    const { publicKey, privateKey } = await generateKeyPair();

    keys = { deviceId, publicKey, privateKey };
    await saveKeys(keys);

    // Register public key with backend
    await fetch("/api/devices/register", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ deviceId, publicKey }),
    });

    console.log(" Device keys generated");
  } else {
    console.log(" Device keys loaded");
  }

  // expose globally for later steps
  window.deviceKeys = keys;
}

(async () => {
  await initDeviceKeys();
})();

async function importPrivateKey(jwk) {
  return crypto.subtle.importKey(
    "jwk",
    jwk,
    { name: "ECDH", namedCurve: "P-256" },
    false,
    ["deriveBits"]
  );
}

async function importPublicKey(jwk) {
  return crypto.subtle.importKey(
    "jwk",
    jwk,
    { name: "ECDH", namedCurve: "P-256" },
    false,
    []
  );
}

async function deriveSharedSecret(otherUserId) {
  // 1. fetch other user's public key
  const res = await fetch(`/api/devices/public/${otherUserId}`);
  const data = await res.json();

  if (!data.publicKey) {
    throw new Error("Public key not found");
  }

  // 2. import keys
  const myPrivateKey = await importPrivateKey(
    window.deviceKeys.privateKey
  );

  const otherPublicKey = await importPublicKey(
    data.publicKey
  );

  // 3. derive shared secret bits
  const sharedSecret = await crypto.subtle.deriveBits(
    {
      name: "ECDH",
      public: otherPublicKey,
    },
    myPrivateKey,
    256
  );

  return sharedSecret; // ArrayBuffer
}


  const socket = window.appSocket;

  const userItems = Array.from(document.querySelectorAll(".user-item"));
  const onlineContainer = document.getElementById("onlineUsers");
  const allUsersContainer = document.getElementById("followingList");
  const searchInput = document.getElementById("userSearch");
  const topSearchInput = document.getElementById("topUserSearch");
  
  // -----------------------------
  // INITIAL SNAPSHOT
  // -----------------------------
