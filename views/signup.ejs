<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <title>Create Account</title>

  <style>
    body {
  margin: 0;
  background: #e5e7eb; /* same as auth-wrapper */
}

    :root {
      --bg-dark: #e5e7eb;        /* muted gray */
      --card-bg: #ffffff;
      --text-dark: #111827;
      --muted: #6b7280;
      --accent: #111111;
      --focus-ring: rgba(0,0,0,0.15);
    }

    .auth-wrapper {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      background: var(--bg-dark);
      padding: 1rem;
    }

    .auth-card {
      width: 100%;
      max-width: 420px;
      background: var(--card-bg);
      padding: 2.2rem;
      border-radius: 14px;
      box-shadow:
        0 20px 40px rgba(0,0,0,0.18),
        0 6px 16px rgba(0,0,0,0.12);
    }

    .auth-title {
      font-size: 1.6rem;
      font-weight: 700;
      margin-bottom: 1.8rem;
      text-align: center;
      color: var(--text-dark);
    }

    .auth-card label {
      font-weight: 600;
      font-size: 0.9rem;
      margin-bottom: 6px;
      color: var(--text-dark);
    }

    .auth-card input {
      width: 100%;
      border: 1.6px solid #d1d5db;
      border-radius: 10px;
      padding: 12px 14px;
      font-size: 0.95rem;
      transition: border 0.2s, box-shadow 0.2s;
    }

    .auth-card input:focus {
      outline: none;
      border-color: #111111;
      box-shadow: 0 0 0 3px var(--focus-ring);
    }

    .form-text {
      font-size: 0.75rem;
      color: var(--muted);
      margin-top: 4px;
    }

    .auth-card button {
      width: 100%;
      margin-top: 1rem;
      padding: 12px;
      font-weight: 600;
      font-size: 1rem;
      border-radius: 12px;
      border: none;
      color: white;
      background: linear-gradient(135deg, #111111, #000000);
      cursor: pointer;
      transition: transform 0.15s ease, box-shadow 0.15s ease;
    }

    .auth-card button:hover {
      transform: translateY(-1px);
      box-shadow: 0 10px 25px rgba(0,0,0,0.35);
    }

    .auth-footer {
      margin-top: 1.4rem;
      display: flex;
      justify-content: center;
      font-size: 0.9rem;
      color: var(--muted);
    }

    .auth-footer a {
      margin-left: 4px;
      text-decoration: none;
      color: #000;
      font-weight: 600;
    }

    .auth-footer a:hover {
      text-decoration: underline;
    }
    .auth-error {
  background: #fee2e2;
  color: #991b1b;
  padding: 10px 14px;
  border-radius: 8px;
  font-size: 0.9rem;
  font-weight: 600;
  margin-bottom: 1rem;
  text-align: center;
}

  </style>
</head>

<body>

  <div class="auth-wrapper">
    <div class="auth-card">

      <div class="auth-title">Create your account</div>
      <% if (typeof error !== "undefined") { %>
  <div class="auth-error">
    <%= error %>
  </div>
<% } %>

      <form action="/user/signup" method="post">

        <div class="mb-3">
          <label for="fullName">Full Name</label>
          <input
            type="text"
            id="fullName"
            name="fullName"
            placeholder="Enter your full name"
            required
          >
        </div>

        <div class="mb-3">
          <label for="email">Email address</label>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="Enter your email"
            required
          >
          <div class="form-text">
            We'll never share your email with anyone else.
          </div>
        </div>

        <div class="mb-4">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Create a password"
            required
          >
        </div>

        <button type="submit">
          Create Account
        </button>

      </form>

      <div class="auth-footer">
        <span>
          Already have an account?
          <a href="/signin">Sign in</a>
        </span>
      </div>

    </div>
  </div>

  <%- include('./partials/scripts') %>
</body>
</html>





