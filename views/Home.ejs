<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head') %>
  <title>Homepage</title>

  <style>
    /* ===== Blog Card ===== */



    .blog-card {
      height: 100%;
      display: flex;
      flex-direction: column;
      border-radius: 14px;
      background: #ffffff;
      overflow: hidden;
      position: relative;
      cursor: pointer;

      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
      transition: transform 0.25s ease, box-shadow 0.25s ease;
    }

    .blog-card:hover {
      transform: translateY(-6px);
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    }
    .blog-card:hover .card-title {
  color: #2563eb; 
}


    /* ===== Image Wrapper ===== */
    .card-image {
      position: relative;
      height: 200px;
      background: #000;
      overflow: hidden;
    }

    .card-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.4s ease;
    }

    .blog-card:hover .card-image img {
      transform: scale(1.08);
    }

    /* Gradient overlay */
    .card-image::after {
      content: "";
      position: absolute;
      inset: 0;
      background: linear-gradient(
        to bottom,
        rgba(0,0,0,0) 40%,
        rgba(0,0,0,0.45) 100%
      );
    }

    /* ===== Card Body ===== */
    .card-body {
      flex: 1;
      display: flex;
      flex-direction: column;
      padding: 1.1rem 1.2rem;
    }

    /* Title */
    .card-title {
      font-size: 1.25rem;
      line-height: 1.25;
      font-weight: 800;
      margin-bottom: 0.5rem;
      color: #111827;
      line-height: 1.3;
    }

    /* Description */
    .card-text {
      font-size: 0.92rem;
      color: #6b7280;
      line-height: 1.45;
      flex-grow: 1;
      margin-bottom: 0.9rem;
    }

    /* ===== Author Meta ===== */
    .card-footer-meta {
      display: flex;
      align-items: center;
      gap: 0.6rem;
      font-size: 0.8rem;
      color: #6b7280;
    }

    .author-avatar {
      width: 28px;
      height: 28px;
      border-radius: 50%;
      border: 2px solid #fff;
  box-shadow: 0 2px 6px rgba(0,0,0,0.15);
      object-fit: cover;
    }

    .author-name {
      font-weight: 600;
      color: #374151;
    }

    /* Grid spacing */
    .row {
      row-gap: 1.8rem;
    }



  </style>
</head>

<body>
  <%- include('./partials/nav') %>

  <div class="container-fluid mt-4 px-4 px-lg-5">
    <div class="row row-cols-1 row-cols-md-3">

      <% blogs.forEach(blog => { %>
        <div class="col d-flex">
          <div class="blog-card flex-fill">

            <!-- Image -->
            <div class="card-image">
              <img src="<%= blog.coverImageURL %>" alt="Blog cover">
            </div>

            <!-- Content -->
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>

              <p class="card-text">
                <% if (blog.description && blog.description.length > 0) { %>
                  <%= blog.description.slice(0, 100) %>...
                <% } else { %>
                  No description available.
                <% } %>
              </p>

              <!-- Author + Date -->
              <div class="card-footer-meta">
                <img
                  src="<%= blog.author?.profileImage || '/images/default-avatar.png' %>"
                  alt="Author"
                  class="author-avatar"
                >

                <span class="author-name">
                  <%= blog.author?.fullName || 'Unknown' %>
                </span>

                <span>Â·</span>

                <span>
                  <%= new Date(blog.createdAt).toLocaleDateString('en-IN', {
                    day: 'numeric',
                    month: 'short',
                    year: 'numeric'
                  }) %>
                </span>
              </div>

              <a href="/blog/<%= blog._id %>" class="stretched-link"></a>
            </div>

          </div>
        </div>
      <% }) %>

    </div>
  </div>

  <%- include('./partials/scripts') %>
</body>
</html>
