<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
    <style>
        .card {
            height: 100%;
            display: flex;
            flex-direction: column;
            border-radius: 10px;
            border: 1px solid #e5e7eb;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.06);
            transition: transform 0.25s ease, box-shadow 0.25s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 16px rgba(0, 0, 0, 0.08);
        }

        .card-img-top {
            height: 200px;
            object-fit: cover;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            transition: transform 0.4s ease;
        }

        .card:hover .card-img-top {
            transform: scale(1.05);
        }

        .card-body {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            padding: 0.9rem 1rem;
        }

        .card-title {
            font-size: 1rem;
            font-weight: 600;
            margin-bottom: 0.4rem;
        }

        .card-text {
            font-size: 0.9rem;
            color: #6c757d;
            flex-grow: 1;
            margin-bottom: 0.7rem;
            line-height: 1.3;
        }

        .btn-primary {
            align-self: flex-start;
            font-size: 0.85rem;
            padding: 5px 14px;
            border-radius: 6px;
        }

        .row {
            row-gap: 1.5rem;
        }
    </style>
</head>

<body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
        <h2 class="mb-4 fw-semibold">Blogs</h2>

        <div class="row row-cols-1 row-cols-md-3 g-3">
            <% blogs.forEach(blog => { %>
                <div class="col d-flex">
                    <div class="card flex-fill">
                        <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Blog Cover">
                        <div class="card-body d-flex flex-column">
                            <div>
                                <h5 class="card-title"><%= blog.title %></h5>
                                <p class="card-text">
                                    <%= blog.description?.slice(0, 90) || "No description available." %>...
                                </p>
                            </div>
                            <a href="/blog/<%= blog._id %>" class="btn btn-primary mt-auto">View</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <%- include('./partials/scripts') %>
</body>

</html>


